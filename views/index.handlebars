<h1>Eat A Burger!</h1>

<h2>Burgers that have not been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Eaten?</label><br>
    <input type="radio" name="sleepy" value="0" checked> No!<br>
    <input type="radio" name="sleepy" value="1"> Yes
  </div>

  <button type="submit">Add Burger</button>
</form>
